<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %><td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", book_path(book.id) %></td>
      <td><%= link_to "destroy", @book, "data-confirm" => "Are you sure?" %> </td>
    </tr>
  </tbody>
</table>

<h3>New Books</h3>
<%= form_with model: List.new do |f| %>

<h4>Title</h4>
<%= f.text_filed :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>